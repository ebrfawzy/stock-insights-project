{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE"
    },
    "deploy": {
        "startCommand": "python manage.py migrate && gunicorn stock_api.wsgi:application --bind 0.0.0.0:$PORT --workers 3 --timeout 120",
        "healthcheckPath": "/admin/",
        "healthcheckTimeout": 300,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 1
    }
}