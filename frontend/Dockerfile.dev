# ---------------------------------------------------------------------------
# Development stage (serve compiled static files)
# ---------------------------------------------------------------------------

# Development Dockerfile for Angular
FROM node:24-alpine AS development
LABEL stage=development
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Expose port
EXPOSE 4200

# Start development server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "4200"]
