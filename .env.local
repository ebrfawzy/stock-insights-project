# Local Development Environment Variables
# This file is used by docker-compose.yml for local development

# Database Configuration
POSTGRES_DB=stock_insights_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Django Backend Configuration
DJ_ENV=development
DJ_DEBUG=True
DJ_SECRET=dev-secret-key-not-for-production-change-this
DJANGO_LOG_LEVEL=DEBUG

# Database Connection
PGDATABASE=stock_insights_db
PGUSER=postgres
PGPASSWORD=password
PGHOST=postgres
PGPORT=5432

# CORS Configuration
FRONTEND_URL=http://localhost:4200

# Frontend Configuration
NODE_ENV=development
API_URL=http://localhost:8000

# Ports (can be changed if conflicts occur)
BACKEND_PORT=8000
FRONTEND_PORT=4200
POSTGRES_PORT=5432
