# Production Environment Variables

# Environment Type
ENVIRONMENT=production
DJ_ENV=production
NODE_ENV=production

# Django Backend
DJ_DEBUG=False
DJ_SECRET=${DJ_SECRET_KEY}
DJANGO_LOG_LEVEL=INFO
DJ_SAME_SITE=Strict

# Frontend & CORS
FRONTEND_URL=${RAILWAY_STATIC_URL}
API_URL=${RAILWAY_PUBLIC_DOMAIN}
CORS_ALLOWED_ORIGINS=${FRONTEND_URL}

# Database Configuration
POSTGRES_HOST=${RAILWAY_PRIVATE_DOMAIN}
POSTGRES_PORT=5432
POSTGRES_USER=${PGUSER}
POSTGRES_PASSWORD=${PGPASSWORD}

# Django Database (Railway provides this)
DATABASE_URL=${DATABASE_URL}
PGDATABASE=stock_insights_db
POSTGRES_DB=${PGDATABASE}

# Airflow Database
AIRFLOW_DATABASE_URL=postgresql+psycopg2://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/airflow

# Airflow Configuration
AIRFLOW_WWW_USER_USERNAME=admin
AIRFLOW_WWW_USER_PASSWORD=${AIRFLOW_ADMIN_PASSWORD:-your-secure-airflow-password}
AIRFLOW_EXECUTOR=LocalExecutor
AIRFLOW_FERNET_KEY=${AIRFLOW_FERNET_KEY:-UKMzEm3yIuFYEq1y3-2FxPNWSVwRASpahmQ9kQfYVLA=}
AIRFLOW_SECRET_KEY=${AIRFLOW_SECRET_KEY:-your-production-secret-key-very-long-and-very-secure}
AIRFLOW_LOAD_EXAMPLES=false
AIRFLOW_DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/airflow
AIRFLOW_API_AUTH_BACKEND=airflow.api.auth.backend.basic_auth
AIRFLOW_DB_UPGRADE=true
AIRFLOW_WWW_USER_CREATE=true
AIRFLOW_WEBSERVER_PORT=8080

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1
S3_ENDPOINT_URL=https://s3.amazonaws.com

# DuckDB & Data Pipeline
DUCKDB_PATH=/opt/airflow/duckdb/stocks.db
RAW_DATA_BUCKET=stock-insights-raw-prod
PROCESSED_DATA_BUCKET=stock-insights-processed-prod

# Service Ports
BACKEND_PORT=8000
FRONTEND_PORT=3000

# Railway Configuration
RAILWAY_PUBLIC_DOMAIN=
RAILWAY_PRIVATE_DOMAIN=
RAILWAY_PROJECT_NAME=
RAILWAY_ENVIRONMENT_NAME=
RAILWAY_SERVICE_NAME=
RAILWAY_PROJECT_ID=
RAILWAY_ENVIRONMENT_ID=
RAILWAY_SERVICE_ID=